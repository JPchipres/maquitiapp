<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco con radio de esquina -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del EditText -->
            <corners android:radius="8dp" /> <!-- Radio de esquina de 8dp -->
        </shape>
    </item>

    <!-- Borde inferior negro de 2dp -->
    <item
        android:bottom="0dp"
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/buttons" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>

