<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".registro_asociacion">

    <Button
        android:id="@+id/regresar"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Surface"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:rotation="90"
        android:text="v"
        android:textColor="@color/black"
        android:textSize="22dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:layout_below="@+id/regresar"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="Cambia las vidas!\nIngresa los datos"
        android:textSize="34dp"
        android:fontFamily="@font/urbanist_semibold"/>
    <EditText
        android:id="@+id/nombre"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/urbanist"
        android:hint="Nombre de la asociacion"/>
    <EditText
        android:id="@+id/cluni"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/urbanist"
        android:hint="CLUNI"/>
    <EditText
        android:id="@+id/email"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cluni"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/urbanist"
        android:hint="Email"/>
    <EditText
        android:id="@+id/contrase침a"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/urbanist"
        android:hint="Contrase침a"/>

    <Button
        android:id="@+id/registroAsociacion"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contrase침a"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:backgroundTint="@color/turquesa"
        android:text="Registrar Asociaci칩n" />




</RelativeLayout>