<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_sin_registro_asociacion"
    android:background="@color/gris">
    <ImageView
        android:id="@+id/logo_maquitia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.search.SearchBar
        android:id="@+id/buscador"
        android:layout_below="@id/logo_maquitia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@color/turquesa"
        android:id="@+id/registro_asociacion"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/buscador"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1.3"
            android:id="@+id/logo_registro"
            android:src="@drawable/promo_asociacion"/>
        <TextView
            android:paddingTop="15dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/urbanist_semibold"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2"
            android:text="Cuenta con alguna asociación que requiera ser apoyada?"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/boton_registro_asociacion"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="100dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="¡REGISTRATE!"
                android:textSize="10dp"
                app:cornerRadius="0dp"
                app:strokeWidth="@null"
                android:backgroundTint="#25000000"
                android:padding="0dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/registro_asociacion"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/asociaciones_view">
        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

</RelativeLayout>